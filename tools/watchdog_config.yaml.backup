# 웹 애플리케이션 프로젝트용 Watchdog 설정

# 감시 대상 파일
watch_files:
  - "docs/PRD.md"
  - "tasks.json"
  - "package.json"        # Node.js 의존성
  - "requirements.txt"    # Python 의존성
  - ".env.example"        # 환경 설정

# 감시 대상 디렉토리
watch_directories:
  - "docs"
  - "src"
  - "public"              # 정적 파일
  - "components"          # React 컴포넌트
  - "pages"               # Next.js 페이지
  - "api"                 # API 라우트
  - "styles"              # CSS/SCSS
  - "assets"              # 이미지, 폰트 등

# 성능 설정
debounce_time: 1.5        # 웹 개발은 더 빠른 반응
hash_check: true
recursive: true
max_file_size: 5242880    # 5MB (이미지 파일 고려)

# 제외 패턴 (웹 특화)
exclude_patterns:
  - "*.tmp"
  - "*.log"
  - ".git/*"
  - "node_modules/*"
  - "__pycache__/*"
  - "*.pyc"
  - ".next/*"             # Next.js 빌드
  - ".nuxt/*"             # Nuxt.js 빌드
  - "dist/*"              # 빌드 결과물
  - "build/*"             # 빌드 결과물
  - ".cache/*"            # 캐시 파일
  - "*.min.js"            # 압축된 JS
  - "*.min.css"           # 압축된 CSS

# 포함 확장자 (웹 특화)
include_extensions:
  - ".md"                 # 문서
  - ".json"               # 설정 파일
  - ".yaml"               # 설정 파일
  - ".yml"                # 설정 파일
  - ".js"                 # JavaScript
  - ".ts"                 # TypeScript
  - ".jsx"                # React JSX
  - ".tsx"                # React TypeScript
  - ".vue"                # Vue 컴포넌트
  - ".svelte"             # Svelte 컴포넌트
  - ".css"                # CSS
  - ".scss"               # SCSS
  - ".sass"               # SASS
  - ".less"               # LESS
  - ".html"               # HTML
  - ".php"                # PHP
  - ".py"                 # Python
  - ".sql"                # SQL

# 리플렉션 명령어 (웹 특화)
reflect_command:
  - "python"
  - "tools/tasks_reflect.py"
  - "--in"
  - "tasks.json"
  - "--out"
  - "tasks.reflected.json"
  - "--report"
  - "reports/tasks_reflect_report.md"

# 고급 설정
advanced:
  # 배치 처리 (웹 개발에 적합)
  batch_processing: true
  batch_size: 5
  batch_timeout: 10
  
  # 병렬 처리
  parallel_reflection: true
  max_workers: 4
  
  # 성능 모니터링
  performance_monitoring: true
  stats_interval: 30      # 30초마다 통계
  
  # 에러 처리
  error_handling:
    max_retries: 3
    retry_delay: 2
    exponential_backoff: true
    
  # 알림 설정
  notifications:
    console: true
    log_file: true
    webhook_url: ""       # Slack/Discord 웹훅
    email: ""             # 개발팀 이메일

# 환경별 설정
environments:
  development:
    debounce_time: 0.5    # 개발 시 빠른 반응
    hash_check: false     # 개발 시 해시 체크 비활성화
    verbose_logging: true
    watch_directories: ["src", "docs", "public"]
    
  production:
    debounce_time: 5.0    # 프로덕션 시 안정성 우선
    hash_check: true
    verbose_logging: false
    watch_directories: ["docs", "tasks.json"]
    batch_processing: true
    
  testing:
    debounce_time: 0.1    # 테스트 시 최대한 빠르게
    hash_check: false
    verbose_logging: true
    watch_directories: ["tests", "spec"]
    max_file_size: 1048576  # 1MB

# 통합 설정
integration:
  # CI/CD 통합
  ci_cd:
    enabled: true
    github_actions: true
    jenkins: false
    gitlab_ci: false
    
  # IDE 통합
  ide_integration:
    cursor: true
    vscode: true
    intellij: true
    
  # MCP 통합
  mcp_integration:
    enabled: false
    mcp_server: "shrimp"
    fallback_to_local: true
